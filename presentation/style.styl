@import url('https://fonts.googleapis.com/css?family=Montserrat:700');
@import url('https://fonts.googleapis.com/css?family=Open+Sans:400,700,400italic,700italic');

transition-mixin()
  -webkit-transition arguments
  -moz-transition arguments
  -ms-transition arguments
  -o-transition arguments
  transition arguments

body
  background #FFF

::selection
  color white
  background rgba(79, 64, 28, 0.99)
  text-shadow none

.reveal
  font-family "Open Sans", sans-serif
  font-size 30px
  font-weight 400
  letter-spacing -0.02em
  color #000
  a
    &:not(.image)
      color #A2650B
      text-decoration none
      transition-mixin color .15s ease
    &:not(.image):hover
      color #c0a86e
      text-shadow none
      border none
    &:hover
      img
        background rgba(255, 255, 255, 0.2)
        border-color #8b743d
        box-shadow 0 0 20px rgba(0, 0, 0, 0.55)
  .roll
    span
      &:after
        color #fff
        background #564826
  section
    img
      margin 15px 0px
      background rgba(255, 255, 255, 0.12)
      transition-mixin all .2s linear
  controlsColor = #ccc
  .controls
    div.navigate-left, div.navigate-left.enabled
      border-right-color controlsColor
    div.navigate-right, div.navigate-right.enabled
      border-left-color controlsColor
    div.navigate-up, div.navigate-up.enabled
      display none
    div.navigate-down, div.navigate-down.enabled
      display none
  ul
    margin-left 1.5em
  .progress
    background rgba(0, 0, 0, 0.2)
    span
      background #8b743d
      transition-mixin width 800ms cubic-bezier(0.26, 0.86, 0.44, 0.985)
  pre
    font-size 0.8em
    box-shadow none
    width 95%
    code
      padding 10px
    &.inline
      width auto
      display inline
      padding 0
      code
        display inline
        padding 0
        vertical-align 0
  table
    margin 10px auto
  h1, h2, h3, h4, h5, h6
    margin 0 0 20px 0
    color #000
    font-family "Montserrat", Impact, sans-serif
    line-height 0.9em
    letter-spacing -0.03em
    text-transform none
    text-shadow none
  .bigger
    p, li, td
      font-size 40px
      line-height 50px
    li
      margin-bottom 20px

  .plot
    height 760px
